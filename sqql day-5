CREATE TABLE Customers (
    CustomerID INT PRIMARY KEY,
    CustomerName VARCHAR(50),
    City VARCHAR(50)
);

CREATE TABLE Orders (
    OrderID INT PRIMARY KEY,
    CustomerID INT,
    OrderDate DATE,
    Amount DECIMAL(10,2),
    FOREIGN KEY (CustomerID) REFERENCES Customers(CustomerID)
);

INSERT INTO Customers VALUES
(1, 'Alice', 'Delhi'),
(2, 'Bob', 'Mumbai'),
(3, 'Charlie', 'Chennai');

INSERT INTO Orders VALUES
(101, 1, '2025-08-01', 1200.50),
(102, 2, '2025-08-03', 800.00),
(103, 4, '2025-08-05', 500.00);  -- CustomerID 4 doesn't exist in Customers


#INNER JOIN
SELECT Customers.CustomerID, CustomerName, OrderID, Amount
FROM Customers
INNER JOIN Orders
ON Customers.CustomerID = Orders.CustomerID;

#LET JOIN
SELECT Customers.CustomerID, CustomerName, OrderID, Amount
FROM Customers
LEFT JOIN Orders
ON Customers.CustomerID = Orders.CustomerID;

#RIGHT JOIN
SELECT Customers.CustomerID, CustomerName, OrderID, Amount
FROM Customers
RIGHT JOIN Orders
ON Customers.CustomerID = Orders.CustomerID;

#FULL JOIN
SELECT Customers.CustomerID, CustomerName, OrderID, Amount
FROM Customers
FULL OUTER JOIN Orders
ON Customers.CustomerID = Orders.CustomerID;
